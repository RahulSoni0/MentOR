<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.overViewFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:scrollbars="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/courseImage"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:elevation="10dp"
                android:scaleType="fitXY"
                android:background="@drawable/rec3"
                android:src="@drawable/open_source"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <LinearLayout
                android:id="@+id/linearCourseOverview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                app:layout_constraintTop_toBottomOf="@id/courseImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/titleCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Source"
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey_primary"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:padding="2dp"

                    />

                <View
                    android:layout_width="96dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="6dp"
                    android:background="@color/primary"
                    android:layout_marginLeft="4dp"
                    />

                <TextView
                    android:id="@+id/courseDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="In this course there will be a beginner level discussion about how to start with open source and how to find best repositories ob github which perfectly matches your skills. With this awesome course you will be provided with some git command and step by step ebook guides and video hands-on. Our course instructor is highly experienced and have years of experience to guide beginner level candidates in Open Source."
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="viewStart"
                    android:textColor="@color/dark_grey_primary"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginTop="32dp"

                    />

                <TextView
                    android:id="@+id/titleCoach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Instructor :"
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="2dp"
                    android:layout_marginTop="32dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/profileCoach"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="2dp"
                        android:src="@drawable/coach_profile"
                        android:layout_gravity="center_vertical"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/nameCoach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rahul Kumar Soni"
                            android:fontFamily="@font/noto_sans"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:padding="2dp"
                            />
                        <TextView
                            android:id="@+id/aboutCoach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android Developer\nOpen Source Contributor"
                            android:fontFamily="@font/noto_sans"
                            android:textAlignment="center"
                            android:textColor="@color/dark_grey_primary"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            android:padding="2dp"
                            />



                    </LinearLayout>





                </LinearLayout>






            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>