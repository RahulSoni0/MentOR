<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activity.MainDialogActivity">

    <ImageView
        android:id="@+id/close_dialog_main"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:src="@drawable/close"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:focusable="true"
        />


    <TextView
        android:id="@+id/well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Welcome to  "
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="24dp"
        android:textSize="24dp"


        />
    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toLeftOf="@id/logotxt1"
        app:layout_constraintTop_toBottomOf="@id/well"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logo"
        >

    </ImageView>
    <ImageView
        android:id="@+id/logotxt1"
        android:layout_width="196dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
       android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/well"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/logotxt"
        >

    </ImageView>


<!--    Junk XML-->
    <TextView
        android:id="@+id/maintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/close_dialog_main"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="One Stop Solution for all \n your Skill Development \n problems"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="84dp"
        android:textSize="24dp"


        />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/maintxt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="> learn at your own pace"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="36dp"
        android:textSize="24dp"


        />
    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="> Explore different carrer oppurtunities related to \n any skill you learn"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="8dp"
        android:textSize="24dp"


        />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:text="Need any new course or have \nany suggesition for  exsisting one ?"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="36dp"
        android:textSize="28dp"


        />
    <TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Try asking Bot ⏚ "
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        android:padding="8dp"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="36dp"
        android:textSize="24dp"


        />
    <ImageView
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/bawtlogo"
        >

    </ImageView>



</androidx.constraintlayout.widget.ConstraintLayout>