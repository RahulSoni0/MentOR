<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragments.fragment_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/idSubMainConsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="10dp"
                >

                <in.codeshuffle.typewriterview.TypeWriterView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="..."
                    android:textColor="@color/dark_grey_primary"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingBottom="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                     />




                <TextView
                    android:id="@+id/topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="46dp"
                    android:text="What do you want to learn today ?"
                    android:textSize="20sp"
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="center"
                    android:textColor="@color/dark_grey_primary"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userName"

                    />






            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="28dp"
                android:paddingTop="16dp"
                android:elevation="10dp"
                android:background="@drawable/round_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/c"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="If you were confused about how to start and what to start then you are in the right place!"
                    android:textSize="14sp"
                    android:fontFamily="@font/noto_sans"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--todo:change color text-->

            <TextView
                android:id="@+id/slidingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/c2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="abcd"
                android:fontFamily="@font/noto_sans"
                android:textSize="14sp"
                android:textColor="#EA07F1"
                android:textStyle="bold"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="4dp"
                />



            <androidx.viewpager.widget.ViewPager
                android:id="@+id/homeVp"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                app:layout_constraintTop_toBottomOf="@id/slidingText"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:clipToPadding="false"
                android:elevation="10dp"
                android:layout_marginTop="8dp"

                />


            <!--For bottom section = TV + RV-->
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Most Popular"
                android:textColor="@color/dark_grey_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/homeVp"
                android:layout_marginTop="16dp"
                />
            <View
                android:id="@+id/textUnderline"
                android:layout_width="120dp"
                android:layout_height="4dp"
                app:layout_constraintTop_toBottomOf="@id/text2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/primary"

                />

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/homeRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="12dp"
               android:layout_marginRight="12dp"
               android:layout_marginTop="32dp"
               app:layout_constraintTop_toBottomOf="@id/textUnderline"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               >


           </androidx.recyclerview.widget.RecyclerView>



                <TextView
                    android:id="@+id/exploreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/homeRecyclerView"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="12dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Explore More Courses ->"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?selectableItemBackground"
                    />


            <LinearLayout
                android:id="@+id/linear_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/exploreTv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingTop="24dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="12dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="About Us"
                    android:textSize="20sp"
                    android:textColor="@color/dark_grey_primary"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"

                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:elevation="4dp"
                    android:layout_marginTop="12dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        >

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/coach_profile"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Subhadip Das"
                                android:textSize="16sp"
                                android:textColor="@color/dark_grey_primary"
                                android:textStyle="bold"
                                android:layout_marginLeft="18dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Android Developer"
                                android:textSize="12sp"
                                android:textColor="@color/grey_primary"
                                android:textStyle="normal"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="8dp"
                                />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:elevation="4dp"
                    android:layout_marginTop="24dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        >

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/coach_profile"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Rahul Kumar Soni"
                                android:textSize="16sp"
                                android:textColor="@color/dark_grey_primary"
                                android:textStyle="bold"
                                android:layout_marginLeft="18dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="UI/UX | Frontend Developer"
                                android:textSize="12sp"
                                android:textColor="@color/grey_primary"
                                android:textStyle="normal"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="8dp"
                                />

                        </LinearLayout>




                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    android:elevation="4dp"
                    android:layout_marginTop="24dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="2dp"
                        >

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/coach_profile"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Vibhu Pandey"
                                android:textSize="16sp"
                                android:textColor="@color/dark_grey_primary"
                                android:textStyle="bold"
                                android:layout_marginLeft="18dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="Android Developer | Backend Developer"
                                android:textSize="12sp"
                                android:textColor="@color/grey_primary"
                                android:textStyle="normal"
                                android:layout_marginLeft="18dp"
                                android:layout_marginTop="8dp"
                                />

                        </LinearLayout>




                    </LinearLayout>



                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_why_we"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/linear_about_us"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Why Ment"
                        android:textStyle="bold"
                        android:textColor="@color/dark_grey_primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/noto_sans"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="OR"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:textSize="18sp"
                        android:fontFamily="@font/noto_sans"
                        />

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"

                    android:layout_marginTop="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingBottom="32dp"
                    android:paddingTop="32dp"

                    >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:background="@color/primary"
                       android:gravity="center_horizontal"
                       android:paddingTop="16dp"
                       android:paddingBottom="16dp"
                       android:paddingLeft="8dp"
                       android:paddingRight="8dp"
                       >
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="1: Add some best point why to choose mentOR"
                           android:textStyle="normal"
                           android:textColor="@color/white"
                           android:textSize="14sp"
                           android:fontFamily="@font/noto_sans"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:text="2: Add some best point why to choose mentOR"
                           android:textStyle="normal"
                           android:textColor="@color/white"
                           android:textSize="14sp"
                           android:fontFamily="@font/noto_sans"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:text="3: Add some best point why to choose mentOR"
                           android:textStyle="normal"
                           android:textColor="@color/white"
                           android:textSize="14sp"
                           android:fontFamily="@font/noto_sans"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:text="4: Add some best point why to choose mentOR"
                           android:textStyle="normal"
                           android:textColor="@color/white"
                           android:textSize="14sp"
                           android:fontFamily="@font/noto_sans"
                           />
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="8dp"
                           android:text="5: Add some best point why to choose mentOR"
                           android:textStyle="normal"
                           android:textColor="@color/white"
                           android:textSize="14sp"
                           android:fontFamily="@font/noto_sans"
                           />
                   </LinearLayout>



                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@id/linear_why_we"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@color/white"


                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Made with ♥️ by team"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MentOR"/>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chatBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:elevation="20dp"
        android:src="@drawable/chat_icon"
        android:tint="@color/black"
        app:fabSize="normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#FD3CAC"
        app:maxImageSize="24dp"
        app:elevation="20dp"
        android:background="#FD3CAC"

        />
</androidx.constraintlayout.widget.ConstraintLayout>